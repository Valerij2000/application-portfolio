<figure class="item lbimage item-portfolio" data-groups='{{groups}}'>
  <div class="portfolio-item-img">
    <img src={{imgSrc}} alt="{{title}}" title="{{title}}" class="img">
    <a class="lightbox" href={{imgSrc}} title="{{title}}"></a>
  </div>
  <i class="far fa-image"></i>
  <h3 class="h4 name">{{title}}</h3>
  <span class="category">{{category}}</span>
</figure>